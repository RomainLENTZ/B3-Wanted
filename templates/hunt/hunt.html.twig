{% extends 'base.html.twig' %}

{% block title %}Hello HuntController!
{% endblock %}

{% block body %}

    <div class="hunt-wrapper">

        <a class="goBack" href="{{ path("app_hunt_index_hunt") }}">Retour</a>

        <div class="single-hunt">

            <div class="left-part">

                {% if hunt.target.image|length < 15 and hunt.target.image is not null %}
                    <img src="{{ asset('img/user.png') }}" alt="img of the hunt">
                {% else %}
                    <img src="{{ hunt.target.image }}" alt="img of the hunt">
                {% endif %}

            </div>

            <div class="right-part">

                <p><span>Name</span> {{ hunt.target.name }}</p>

                <p><span>Description</span> {{ hunt.target.description }}</p>

                <p><span>RÃ©compense</span> {{ hunt.bounty|number_format(0,',', ' ') }} $</p>

                <p><span>Auteur</span> {{ hunt.name }}</p>

                <p><span>Date</span> {{ hunt.createdAt|date('Y/m/d') }}</p>

            </div>

        </div>
    </div>

{% endblock %}

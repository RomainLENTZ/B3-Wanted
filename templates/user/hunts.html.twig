{% extends 'base.html.twig' %}

{% block title %}Hello HuntController!
{% endblock %}

{% block body %}
	<style></style>
	<div class="container">
		<ul>
			{% for hunt in hunts %}
				<li>
					<p>{{ hunt.name }}</p>
					<p>{{ hunt.bounty }}</p>
					{% if hunt.author is not null %}
						<p>{{ hunt.author.username }}</p>
					{% endif %}
					<p>{{ hunt.target.name }}</p>
				</li>
			{% endfor %}
		</ul>

	</div>
{% endblock %}
